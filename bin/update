#!/bin/sh

if [ "$(uname -s)" = "Darwin" ]; then
  brew upgrade; conda update -y -n base -c defaults conda python setuptools; npm update -g; vim +PlugUpgrade +PlugInstall! +PlugClean! +qa; cd $HOME/.oh-my-zsh/tools/ && sh upgrade.sh
else
  sudo apt-get update; sudo apt-get upgrade -y; conda update -y -n base -c defaults conda python setuptools; vim +PlugUpgrade +PlugInstall! +PlugClean! +qa; cd $HOME/.oh-my-zsh/tools/ && sh upgrade.sh;
fi
