# Util {{{

  # List only directories
  alias lsd="ls -d */"
  # Always use human-readable sizes with `df`.
  alias df="df -h"
  alias fullpath="greadlink -f"
  # Use GNU grep instead of BSD grep
  alias grep="ggrep"
  # Use colordiff instead of native diff
  alias diff="colordiff"
  # Always use 256 colors with tmux.
  alias tmux="tmux -2"
  # Use colordiff and less instead of native diff
  alias dif="colordiffless"
  # list dir contents (all with human-readable size)
  alias l='ls -AhG1'
  alias ll='ls -lAhG'
  alias lsa='ls -AhG'
  # use nvim
  alias vim="nvim"
  # shortcut for vim
  alias v="nvim"
  # move file to trash
  alias t="trash-put"
  # safe rm
  alias rm="trash-put"
  # shortcut for clearing screen
  alias c='clear'
  # shortcut for clearing screen and displaying dir contents
  alias cl='clear && l'
  alias cll='clear && ll'
  # move up one directory
  alias ..="cd .."

# }}}

