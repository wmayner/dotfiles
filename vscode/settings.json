{
    "ruff.enable": true,
    "ruff.importStrategy": "fromEnvironment",
    "ruff.lint.enable": true,
    "ruff.format.enable": true,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        }
    },
    "[latex]": {
        "editor.wordWrap": "on"
    },
    "[jade]": {
        "files.trimTrailingWhitespace": false
    },
    "[sql]": {
        "editor.defaultFormatter": "ms-mssql.mssql"
    },
    "debug.console.fontSize": 12,
    "editor.accessibilitySupport": "off",
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.cursorWidth": 3,
    "editor.fontFamily": "FiraCode Nerd Font, Hack Nerd Font, Roboto Mono Nerd Font, Roboto Mono for Powerline, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.indentSize": "tabSize",
    "editor.inlineSuggest.enabled": true,
    "editor.insertSpaces": true,
    "editor.stickyScroll.enabled": true,
    "files.associations": {
        "*.rmd": "markdown",
        "*.tidal": "haskell"
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.enableCommitSigning": true,
    "git.openRepositoryInParentFolders": "always",
    "git.untrackedChanges": "separate",
    "github.copilot.enable": {
        "*": true,
        "markdown": false,
        "plaintext": false,
        "yaml": true
    },
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.nextEditSuggestions.enabled": true,
    "github.copilot.advanced": {
        "authProvider": "github"
    },
    "githubPullRequests.pullBranch": "never",
    "jupyter.notebookFileRoot": "${projectDirname}",
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    "multiCommand.commands": [
        {
            "command": "multiCommand.makeRoom",
            "sequence": [
                "workbench.action.toggleSidebarVisibility",
                "workbench.action.toggleActivityBarVisibility"
            ]
        }
    ],
    "problems.decorations.enabled": true,
    "python.languageServer": "Pylance",
    "python.testing.pytestEnabled": true,
    "python.analysis.typeCheckingMode": "standard",
    "search.searchOnType": false,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.cursorWidth": 3,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.inheritEnv": false,
    "testing.automaticallyOpenPeekView": "never",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.replace": "block-outline",
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "after": ["d", "d"],
            "before": ["<leader>", "d"]
        },
        {
            "before": ["<C-n>"],
            "commands": [":nohl"]
        },
        {
            "after": ["g", "k"],
            "before": ["k"]
        },
        {
            "after": ["g", "j"],
            "before": ["j"]
        },
        {
            "after": ["g", "0"],
            "before": ["0"]
        },
        {
            "after": ["g", "_"],
            "before": ["$"]
        },
        {
            "before": ["L"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": ["H"],
            "commands": ["workbench.action.previousEditor"]
        }
    ],
    "vim.sneak": true,
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,
    "vsicons.dontShowNewVersionMessage": true,
    "window.commandCenter": true,
    "window.zoomLevel": 2,
    "workbench.colorCustomizations": {
        "editorCursor.background": "#999999",
        "editorCursor.foreground": "#03fe0f",
        "editor.findMatchHighlightBackground": "#ffff00",
        "editor.findMatchBackground": "#ff1dce"
    },
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editorAssociations": {
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "workbench.startupEditor": "none",
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "application.shellEnvironmentResolutionTimeout": 20,
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.build.rootfileInStatus": true,
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.latex.rootFile.useSubFile": false,
    "latex-workshop.linting.chktex.enabled": true,
    "makefile.configureOnOpen": true,
    "notebook.output.textLineLimit": 60,
    "go.toolsManagement.autoUpdate": true,
    "docker.extension.enableComposeLanguageServer": false,
    "claudeCode.preferredLocation": "sidebar",
    "claudeCode.selectedModel": "opus",
    "claudeCode.useTerminal": true,
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4.1",
    "geminicodeassist.displayInlineContextHint": false,
    "chat.viewSessions.orientation": "stacked",
    "security.promptForLocalFileProtocolHandling": false
}
