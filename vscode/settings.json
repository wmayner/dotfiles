{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "[latex]": {
        "editor.wordWrap": "on"
    },
    "debug.console.fontSize": 12,
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.fontFamily": "Roboto Mono for Powerline, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.inlineSuggest.enabled": true,
    "editor.insertSpaces": true,
    "editor.stickyScroll.enabled": true,
    "files.associations": {
        "*.rmd": "markdown"
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.enableCommitSigning": true,
    "git.openRepositoryInParentFolders": "always",
    "git.untrackedChanges": "separate",
    "github.copilot.enable": {
        "*": true,
        "markdown": false,
        "plaintext": false,
        "yaml": true
    },
    "jupyter.notebookFileRoot": "${projectDirname}",
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    "multiCommand.commands": [
        {
            "command": "multiCommand.makeRoom",
            "sequence": [
                "workbench.action.toggleSidebarVisibility",
                "workbench.action.toggleActivityBarVisibility"
            ]
        }
    ],
    "problems.decorations.enabled": true,
    "python.formatting.provider": "none",
    "python.languageServer": "Pylance",
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": true,
    "python.testing.pytestEnabled": true,
    "search.searchOnType": false,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.inheritEnv": false,
    "testing.automaticallyOpenPeekView": "never",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.replace": "block-outline",
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "after": [
                "d",
                "d"
            ],
            "before": [
                "<leader>",
                "d"
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        {
            "after": [
                "g",
                "k"
            ],
            "before": [
                "k"
            ]
        },
        {
            "after": [
                "g",
                "j"
            ],
            "before": [
                "j"
            ]
        },
        {
            "after": [
                "g",
                "0"
            ],
            "before": [
                "0"
            ]
        },
        {
            "after": [
                "g",
                "_"
            ],
            "before": [
                "$"
            ]
        },
        {
            "before": [
                "L",
            ],
            "commands": [
                "workbench.action.nextEditor"
            ]
        },
        {
            "before": [
                "H"
            ],
            "commands": [
                "workbench.action.previousEditor"
            ]
        }
    ],
    "vim.sneak": true,
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,
    "vsicons.dontShowNewVersionMessage": true,
    "window.commandCenter": true,
    "workbench.colorCustomizations": {
        "editorCursor.background": "#999999",
        "editorCursor.foreground": "#03fe0f"
    },
    "workbench.colorTheme": "Solarized Dark",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "editor.cursorWidth": 3,
    "terminal.integrated.cursorWidth": 3,
    "workbench.editorAssociations": {
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "latex-workshop.latex.autoBuild.run": "onSave"
}
