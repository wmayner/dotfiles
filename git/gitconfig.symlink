[alias]
  co = checkout
  b = branch
  ba = branch -a
  c = commit -m 
  com = commit -m
  ca = commit -am 
  d = diff
  wd = diff --word-diff
  dc = diff --cached
  g = log --graph
  gr = log --graph --pretty=oneline --abbrev-commit
  l = log --graph --date-order --full-history --date=relative --color --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[32m%x20%ad%x1b[0m"
  la = log --all --graph --date-order --full-history --date=relative --color --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[32m%x20%ad%x1b[0m"
  s = status
  mt = mergetool
  unstage = reset HEAD --
  undo = reset --soft HEAD^
  nuke = reset --hard HEAD^
  blast = reset --hard HEAD
  amend = commit --amend -C HEAD
  contrib = shortlog -sn
  untrack = update-index --assume-unchanged
  track = update-index --no-assume-unchanged
  cp = cherry-pick
[color]
  ui = 1
[color "branch"]
  current = cyan
  local = green
  remote = yellow
[color "diff"]
  meta = cyan reverse
  frag = reverse
  old = red
  new = green
[color "status"]
  added = green
  changed = yellow
  untracked = cyan
[user]
  name = Will Mayner
  email = wmayner@gmail.com
  signingkey = B46975179AD9DFC0
[core]
  excludesfile = /Users/will/.gitignore
  autocrlf = input
[credential]
  helper = cache --timeout=10800
[merge]
  tool = vimdiff
  conflictstyle = diff3
[push]
  default = current
[help]
  autocorrect = 0
[rerere]
  enabled = 1
[diff]
  tool = vimdiff
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[pull]
  rebase = true
