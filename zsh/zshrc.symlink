  export EDITOR="vim"
  export VISUAL="vim"
  # Development directory
  export DEV="$HOME/dev"
  # Project directory
  export CODE="$DEV/projects"
  # Path to dotfiles repo
  export DOTFILES="$HOME/dotfiles"
  # Locale
  export LANG="en_US.UTF-8"
  export LC_ALL="$LANG"
