    # Executables from `pip install --user`
    export PATH="$HOME/Library/Python/2.7/bin:$PATH"
  fi
  # User-local executables
  export PATH="$HOME/.local/bin:$PATH"
  # Ensure /usr/local/bin is early
  export PATH="/usr/local/bin:$PATH"
