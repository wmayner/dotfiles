# PATH {
  # User-local executables
  export PATH="$HOME/.local/bin:$PATH"
  # Dotfile executables
  export PATH="$HOME/dotfiles/bin:$PATH"
  # Local executables
  export PATH="$HOME/bin:$PATH"

  # Prefer Apple Silicon Homebrew + system tools over Intel Homebrew
  if [ "$OS" = "Darwin" ]; then
    if [ -d "/opt/homebrew/bin" ]; then
      export PATH="/opt/homebrew/bin:/opt/homebrew/sbin:$PATH"
    fi
    # De-prioritize Intel Homebrew if present
    if command -v /usr/libexec/path_helper >/dev/null 2>&1; then
      :
    fi
  fi

  # Normalize PATH order (Apple Silicon: prefer arm64 Homebrew; drop any Intel Homebrew paths)
  if [[ "$OS" == "Darwin" && "$(uname -m)" == "arm64" ]]; then
    typeset -U path

    # Start with preferred roots, then append whatever is already there (after filtering).
    path=(/opt/homebrew/bin /opt/homebrew/sbin /usr/bin /bin /usr/sbin /sbin $path)

    # IMPORTANT: join with ':' (not spaces) when exporting PATH.
    export PATH="${(j/:/)path}"
    hash -r
  fi

  # TeX commands
  export PATH="$PATH:/usr/texbin"
  if [ "$OS" = "Darwin" ]; then
    # GNU-utilities
    if [ -d "/opt/homebrew/opt/grep/libexec/gnubin" ]; then
      export PATH="/opt/homebrew/opt/grep/libexec/gnubin:$PATH"
    fi
  fi
# }

