# Prevent installing new things into base
function extended_conda(){
  if [ "${CONDA_PROMPT_MODIFIER-}" = "(base) " ] && [ "$1" = "install" ]; then
    echo "Not allowed in base environment"
  else
    conda "$@"
  fi
}
alias conda=extended_conda

