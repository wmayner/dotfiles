    alias htop="sudo htop"
    # Always use 256 colors with tmux
    alias tmux="tmux -2"
    # list dir contents (with human-readable sizes)
    alias l="ls -AhG1F"
    alias ll="ls -lAhGF"
    alias lsa="ls -AhGF"
